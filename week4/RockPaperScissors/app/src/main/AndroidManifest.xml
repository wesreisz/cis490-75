<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wesleyreisz.rockpaperscissors" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_rock"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wesleyreisz.rockpaperscissors.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wesleyreisz.rockpaperscissors.WinLoseActivity"
            android:label="@string/title_activity_win_lose" >
        </activity>
    </application>

</manifest>
